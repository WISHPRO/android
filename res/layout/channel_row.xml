<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="#111111" >

    <ImageView
        android:id="@+id/imgChannelLogo"
        android:contentDescription="@string/zenderlogo"
        android:layout_width="60dp"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="4dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtChannelName"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_margin="2dp"
            android:text="@string/zendernaam"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txtCurrentProgram"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            android:text="@string/no_epg_data" />
		<TextView
            android:id="@+id/txtNextProgram"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            android:text="@string/no_epg_data" />
        
    </LinearLayout>

</LinearLayout>